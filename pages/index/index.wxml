<!--pages/index/index.wxml-->
<view class='container'>
  <view class='banners'>
    <swiper autoplay style='width:750rpx;height:380rpx;'>
      <swiper-item wx:for='{{banners}}' wx:key='index'>
        <image class='swiper-img' src='{{item}}' mode='widthFix'></image>
      </swiper-item>
    </swiper>
    <view class='navigation'>
      <view class='nav-item' wx:for='{{navigation}}' wx:key='index'>
        <image src='{{item.src}}'></image>
        <text>{{item.title}}</text>
      </view>
    </view>
  </view>
  <view class='shop-list'>
    <view class='shop-item' wx:for='{{shopList}}' wx:key='index' id='{{item.id}}' bindtap='goToInfo'>
      <image class='shop-image' src='{{item.image}}'></image>
      <view class='shop-title'>{{item.title}}</view>
      <view class='shop-user'>发布者：{{item.user}}
      </view>
      <text class='shop-value'>￥{{item.value}}</text>
    </view>
  </view>
</view>